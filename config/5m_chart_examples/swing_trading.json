{
  "chart": {
    "theme": "light",
    "height": 800,
    "width": 1200,
    "update_interval": 60,
    "time_range_hours": 8,
    "show_volume": true,
    "volume_height_ratio": 0.25
  },
  "indicators": {
    "enabled": ["sma", "ema"],
    "sma": {
      "periods": [20, 50, 200],
      "colors": ["blue", "orange", "red"]
    },
    "ema": {
      "periods": [12, 26],
      "colors": ["green", "purple"]
    },
    "vwap": {
      "enabled": false,
      "color": "brown",
      "line_width": 1.5
    },
    "volume_ma": {
      "period": 50,
      "color": "gray"
    }
  },
  "data": {
    "symbol": "NQM5",
    "timezone": "US/Eastern",
    "cache_enabled": true,
    "cache_duration_minutes": 30
  },
  "display": {
    "price_format": "decimal_2",
    "volume_format": "millions",
    "show_current_price": true,
    "show_statistics": true,
    "show_update_time": false,
    "grid_enabled": true
  },
  "export": {
    "default_format": "pdf",
    "include_timestamp": true,
    "output_directory": "outputs/swing_analysis"
  }
}
